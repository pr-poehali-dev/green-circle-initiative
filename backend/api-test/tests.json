{
  "tests": [
    {
      "name": "Тест GET запроса без параметров",
      "method": "GET",
      "path": "/",
      "expectedStatus": 200,
      "expectedBody": {
        "message": "string",
        "timestamp": "string",
        "status": "success",
        "request_id": "string",
        "function_name": "string",
        "version": "1.0.0"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Тест GET запроса с параметром name",
      "method": "GET",
      "path": "/?name=Тест",
      "expectedStatus": 200,
      "expectedBody": {
        "message": "Привет, Тест!",
        "status": "success"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Тест POST запроса с данными",
      "method": "POST",
      "path": "/",
      "body": {
        "test": "data",
        "number": 123
      },
      "expectedStatus": 200,
      "expectedBody": {
        "message": "Данные получены успешно",
        "status": "processed",
        "received_data": {
          "test": "data",
          "number": 123
        }
      },
      "bodyMatcher": "partial"
    }
  ]
}