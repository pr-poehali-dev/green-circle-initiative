{
  "tests": [
    {
      "name": "Register new user successfully",
      "method": "POST",
      "path": "/",
      "body": {
        "username": "testuser123",
        "email": "test123@example.com",
        "password": "securepassword",
        "name": "Test User"
      },
      "expectedStatus": 201,
      "expectedBody": {
        "success": true,
        "message": "Пользователь успешно зарегистрирован",
        "user": {
          "username": "testuser123",
          "email": "test123@example.com"
        }
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Reject registration with short password",
      "method": "POST",
      "path": "/",
      "body": {
        "username": "testuser2",
        "email": "test2@example.com", 
        "password": "123",
        "name": "Test User 2"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "success": false,
        "message": "Пароль должен быть не менее 6 символов"
      },
      "bodyMatcher": "partial"
    }
  ]
}